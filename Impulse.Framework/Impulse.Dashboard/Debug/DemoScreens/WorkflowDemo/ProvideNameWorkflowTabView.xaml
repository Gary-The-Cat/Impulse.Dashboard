<UserControl x:Class="Impulse.Dashboard.Debug.DemoScreens.WorkflowDemo.ProvideNameWorkflowTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Impulse.Dashboard.Debug.DemoScreens.WorkflowDemo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Style="{DynamicResource MinorHeaderTextBlock}"
            Text="Name"/>
        <TextBox
            Grid.Row="1"
            Text="{Binding Name, Mode=TwoWay}"/>
    </Grid>
</UserControl>
