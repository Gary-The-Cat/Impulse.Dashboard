<UserControl x:Class="Impulse.Dashboard.Debug.DemoScreens.GoogleApiDemo.GoogleApiDemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Impulse.Dashboard.Debug.DemoScreens.GoogleApiDemo"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox
            Grid.Row="0"
            Height="30"
            Text="{Binding CurrentAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <ListBox
            Grid.Row="1"
            ItemsSource="{Binding SuggestedAddresses}"
            Background="{DynamicResource BackgroundBrush}"/>
    </Grid>
</UserControl>
