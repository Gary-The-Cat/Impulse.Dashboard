<UserControl x:Class="Impulse.Dashboard.Debug.DemoScreens.LlmChat.LlmChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Margin="0,0,8,0"
                BorderBrush="{DynamicResource AccentColorBrush}"
                BorderThickness="0,0,1,0">
            <DockPanel>
                <TextBlock Text="Sessions"
                           FontWeight="Bold"
                           Margin="0,0,0,8"
                           DockPanel.Dock="Top" />
                <StackPanel Orientation="Vertical">
                    <TextBox Text="{Binding SelectedSessionTitle, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,8"
                             ToolTip="Session title" />
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch">
                        <Button Content="New"
                                Width="60"
                                Margin="0,0,4,0"
                                cal:Message.Attach="[Event Click] = [Action CreateSession()]" />
                        <Button Content="Save"
                                Width="60"
                                Margin="0,0,4,0"
                                IsEnabled="{Binding CanSaveSessionTitle}"
                                cal:Message.Attach="[Event Click] = [Action SaveSelectedSessionTitle()]" />
                        <Button Content="Delete"
                                Width="60"
                                IsEnabled="{Binding CanDeleteSession}"
                                cal:Message.Attach="[Event Click] = [Action DeleteSelectedSession()]" />
                    </StackPanel>
                    <ListBox ItemsSource="{Binding Sessions}"
                             SelectedItem="{Binding SelectedSession}"
                             MinHeight="200">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,4">
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding LastUpdatedUtc, StringFormat='{}{0:G}'}" FontSize="11" Foreground="Gray" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Margin="0,0,0,8"
                    BorderBrush="{DynamicResource AccentColorBrush}"
                    BorderThickness="1"
                    Padding="8">
                <ScrollViewer x:Name="ChatScrollViewer"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ActiveMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8"
                                        Padding="8"
                                        CornerRadius="4"
                                        MaxWidth="600">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#FFF9F9F9" />
                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Role}" Value="User">
                                                    <Setter Property="Background" Value="#FFF4F4F4" />
                                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Role}" Value="Assistant">
                                                    <Setter Property="Background" Value="#FFE8F0FF" />
                                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Role}" Value="System">
                                                    <Setter Property="Background" Value="#FFFDF6E3" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Role}"
                                                   FontWeight="Bold" />
                                        <TextBlock Text="{Binding Content}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <Grid Grid.Row="1"
                  Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                            Orientation="Vertical"
                            Margin="0,0,8,0">
                    <TextBlock Text="Provider"
                               FontWeight="Bold" />
                    <ComboBox ItemsSource="{Binding Providers}"
                              SelectedItem="{Binding SelectedProvider}" />
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            Margin="0,0,8,0">
                    <TextBlock Text="Message"
                               FontWeight="Bold" />
                    <TextBox Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="80" />
                </StackPanel>
                <StackPanel Grid.Column="2"
                            Orientation="Vertical"
                            VerticalAlignment="Bottom">
                    <Button Content="Send"
                            Width="100"
                            IsEnabled="{Binding CanSendMessage}"
                            cal:Message.Attach="[Event Click] = [Action SendMessage()]" />
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <ProgressBar Width="120"
                             Height="6"
                             Margin="0,0,8,0"
                             Visibility="{Binding IsSending, Converter={StaticResource BoolToVisibilityConverter}}"
                             IsIndeterminate="True" />
                <TextBlock Text="{Binding StatusMessage}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
