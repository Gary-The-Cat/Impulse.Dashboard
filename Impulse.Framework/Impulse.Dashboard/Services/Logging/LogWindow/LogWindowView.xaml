<UserControl x:Class="Impulse.Framework.Dashboard.Services.Logging.LogWindow.LogWindowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Impulse.Framework.Dashboard.Services.Logging.LogWindow"
             xmlns:logging="clr-namespace:Impulse.SharedFramework.Services.Logging;assembly=Impulse.SharedFramework"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <local:LogRecordTypeConverter x:Key="LogRecordTypeConverter" />
        <SolidColorBrush x:Key="LogDefaultAccentBrush" Color="#FFA0AEC0" />
        <SolidColorBrush x:Key="LogInfoAccentBrush" Color="#FF8AA5C1" />
        <SolidColorBrush x:Key="LogWarningAccentBrush" Color="#FFE8C26A" />
        <SolidColorBrush x:Key="LogErrorAccentBrush" Color="#FFE99898" />
        <SolidColorBrush x:Key="LogExceptionAccentBrush" Color="#FFBAA4F8" />

        <Style x:Key="LogListItemBorderStyle" TargetType="Border">
            <Setter Property="Padding" Value="6" />
            <Setter Property="Margin" Value="0,0,0,4" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="BorderThickness" Value="3,0,0,0" />
            <Setter Property="BorderBrush" Value="{StaticResource LogDefaultAccentBrush}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=(ItemsControl.AlternationIndex)}" Value="1">
                    <Setter Property="Background" Value="#0C000000" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Converter={StaticResource LogRecordTypeConverter}}" Value="Info">
                    <Setter Property="BorderBrush" Value="{StaticResource LogInfoAccentBrush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Converter={StaticResource LogRecordTypeConverter}}" Value="Warning">
                    <Setter Property="BorderBrush" Value="{StaticResource LogWarningAccentBrush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Converter={StaticResource LogRecordTypeConverter}}" Value="Error">
                    <Setter Property="BorderBrush" Value="{StaticResource LogErrorAccentBrush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Converter={StaticResource LogRecordTypeConverter}}" Value="Exception">
                    <Setter Property="BorderBrush" Value="{StaticResource LogExceptionAccentBrush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                    <Setter Property="Background" Value="#16000000" />
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}" Value="True">
                    <Setter Property="Background" Value="#12000000" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CopyButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="MinWidth" Value="60" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Background" Value="#22000000" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
            <Setter Property="BorderBrush" Value="#33000000" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33000000" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#44000000" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="DefaultLogDetailsTemplate" DataType="{x:Type logging:LogRecordBase}">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Converter={StaticResource LogRecordTypeConverter}}"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryForegroundBrush}" />
                    <TextBlock Text=" • "
                               Foreground="{DynamicResource PrimaryForegroundBrush}"
                               Opacity="0.4"
                               Margin="6,0" />
                    <TextBlock Text="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                               Foreground="{DynamicResource PrimaryForegroundBrush}"
                               Opacity="0.7" />
                </StackPanel>
                <TextBlock Text="{Binding Message}"
                           Foreground="{DynamicResource PrimaryForegroundBrush}"
                           Margin="0,4,0,0"
                           TextWrapping="Wrap" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ExceptionLogDetailsTemplate" DataType="{x:Type logging:ExceptionLogRecord}">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Converter={StaticResource LogRecordTypeConverter}}"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryForegroundBrush}" />
                    <TextBlock Text=" • "
                               Foreground="{DynamicResource PrimaryForegroundBrush}"
                               Opacity="0.4"
                               Margin="6,0" />
                    <TextBlock Text="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                               Foreground="{DynamicResource PrimaryForegroundBrush}"
                               Opacity="0.7" />
                </StackPanel>
                <TextBlock Text="{Binding Message}"
                           Foreground="{DynamicResource PrimaryForegroundBrush}"
                           Margin="0,4,0,0"
                           TextWrapping="Wrap" />
                <TextBlock Text="{Binding ExceptionType}"
                           Foreground="{DynamicResource PrimaryForegroundBrush}"
                           Margin="0,6,0,0" />
                <TextBlock Text="{Binding ExceptionMessage}"
                           Foreground="{DynamicResource PrimaryForegroundBrush}"
                           Margin="0,2,0,0"
                           TextWrapping="Wrap" />
                <Border Margin="0,6,0,0"
                        Background="#08000000"
                        CornerRadius="4"
                        Padding="8">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="240">
                        <TextBlock Text="{Binding StackTrace}"
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}" />
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </DataTemplate>

        <local:LogRecordDetailsTemplateSelector x:Key="LogRecordDetailsTemplateSelector"
                                                DefaultTemplate="{StaticResource DefaultLogDetailsTemplate}"
                                                ExceptionTemplate="{StaticResource ExceptionLogDetailsTemplate}" />
    </UserControl.Resources>

    <Border Background="{DynamicResource LogPanelBackgroundBrush}"
            BorderBrush="{DynamicResource LogPanelBorderBrush}"
            BorderThickness="1"
            CornerRadius="2"
            Padding="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,6">
                <TextBlock Text="Severity"
                           Foreground="{DynamicResource PrimaryForegroundBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           Opacity="0.7" />
                <ComboBox ItemsSource="{Binding SeverityOptions}"
                          SelectedItem="{Binding SelectedSeverity}"
                          Width="100"
                          HorizontalAlignment="Right"
                          DisplayMemberPath="DisplayName"
                          Margin="0,0,12,0" />
                <Button Content="Copy Visible"
                        Style="{StaticResource CopyButtonStyle}"
                        Padding="10,2"
                        Margin="0,0,8,0"
                        Click="CopyVisibleButton_Click" />
                <Button Content="Clear"
                        Style="{StaticResource CopyButtonStyle}"
                        Padding="10,2"
                        Click="ClearButton_Click" />
            </StackPanel>

            <ListBox Grid.Row="1"
                     ItemsSource="{Binding LogRecords}"
                     BorderThickness="0"
                     Background="White"
                     Padding="2"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     AlternationCount="2"
                     VirtualizingStackPanel.IsVirtualizing="True"
                     VirtualizingStackPanel.VirtualizationMode="Recycling">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Focusable" Value="False" />
                        <Setter Property="IsTabStop" Value="False" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource LogListItemBorderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Text="{Binding Message}"
                                           Grid.Column="0"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource PrimaryForegroundBrush}"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,0,8,0" />

                                <StackPanel Grid.Row="1"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            Margin="0,2,0,0">
                                    <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}"
                                               Foreground="{DynamicResource PrimaryForegroundBrush}"
                                               Opacity="0.6" />
                                    <TextBlock Text=" • "
                                               Foreground="{DynamicResource PrimaryForegroundBrush}"
                                               Opacity="0.4"
                                               Margin="4,0" />
                                    <TextBlock Text="{Binding Converter={StaticResource LogRecordTypeConverter}}"
                                               Foreground="{DynamicResource PrimaryForegroundBrush}"
                                               Opacity="0.7" />
                                </StackPanel>

                                <Button Grid.Column="1"
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Margin="12,0,0,0"
                                        HorizontalAlignment="Right"
                                        Content="Copy"
                                        Style="{StaticResource CopyButtonStyle}"
                                        Click="CopyLogButton_Click" />

                                <Border x:Name="DetailsContainer"
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Margin="0,8,0,0"
                                        Background="#0D000000"
                                        CornerRadius="6"
                                        Padding="10"
                                        BorderThickness="1"
                                        BorderBrush="#1A000000">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True" />
                                                        <Condition Binding="{Binding HasDetails}" Value="True" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <ContentControl Content="{Binding}"
                                                    ContentTemplateSelector="{StaticResource LogRecordDetailsTemplateSelector}" />
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</UserControl>
